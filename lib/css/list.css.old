/*-----  MOBILE  -----*/
@media only screen and (max-width:768px) {
    .m-list {
        margin: 80px 0 0 0!important;
        padding: 0!important;
    }

    .m-list_wrap {
        flex-direction: column;
    }

    .m-aside>h1 {
        font-size: 14px!important;
        display: flex;
        flex-wrap: wrap;
        width: 50px;
        height: 100%;
        justify-content: center;
        align-items: center;
    }

    .m-aside {
        border-top: 1px solid #bfbfbf;
        display: flex;
        flex-direction: row!important;
        box-shadow: none!important;
        background: rgba(255,255,255,.95)!important;
        height: 50px;
        align-items: center;
        position: fixed;
        bottom: 0;
        left: 0;
        right: 0;
        width: 100%!important;
    }

    .m-aside>li {
        flex: 1;
        color: #333;
        font-size: 16px;
        height: 25px;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100%;
    }

    .m-bd_list {
        padding: 20px 10px;
    }

    .m-bd_list>li {
        padding: 0;
    }

    .m-bd_list>li>label {
        padding: 0 0 5px 0;
        width: calc( 100% - 100px);
        overflow: hidden;
        white-space: nowrap;
        text-overflow: ellipsis;
    }

    .u-date {
        text-align: center;
    }

    .m-aside>li:before {
        content: "";
        display: block;
        width: 12px!important;
        height: 8px!important;
        background: #ccc;
        border-radius: 9px 1px 10px;
        position: absolute;
        left: 12px!important;
        top: 21px!important;
        transition: .5s;
    }
 

}

