    /* background: #E03F3F; */
    color: #a80000;
}

.m-bd>h1>a {
    color: #b80000;
    position: relative;
}

.m-bd>h1>a:nth-child(2):after {
    content: "";
    display: block;
    width: 0;
    height: 0;
    position: absolute;
    right: -30px;
    top: 6px;
    border: 5px solid transparent;
    border-left: 13px solid #b80000;
}

.m-bd>h1>a:nth-child(2):before {
    content: "";
    display: block;
    width: 0;
    height: 0;
    position: absolute;
    right: -23px;
    top: 6px;
    border: 5px solid transparent;
    border-left: 7px solid #fff;
    z-index: 9999;
}

.m-bd>h1>a:nth-child(3) {
    margin-left: 36px;
}

.m-bd_list {
    padding: 20px;
    display: flex;
    flex-direction: column;
}

.m-bd_list>li {
    padding: 8px 5px;
    display: flex;
}
.m-bd_list>li:hover span {
    color: #b80000;
}
.m-bd_list>li:hover label {
    border-left: 5px solid #b80000;
}
.m-bd_list>li:hover a {
    color:#b80000;
}
.m-bd_list>li>label {
    flex: 1 1 0%;
    border-left: 5px solid #fff;
    padding: 0 0 0 10px;
    transition: .3s;
